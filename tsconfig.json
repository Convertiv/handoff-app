{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "handoff/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  },
  "include": ["src/**/*.ts", ".next/types/**/*.ts", "stories/Button.stories.js"],
  "exclude": ["node_modules", "src/~app-*", "src/app"]
}
