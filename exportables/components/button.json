{
  "id": "button",
  "group": "Components",
  "options": {
    "exporter": {
      "search": "Button",
      "supportedVariantProps": [
        "THEME",
        "TYPE",
        "STATE(:disabled)",
        "SIZE"
      ]
    },
    "transformer": {
      "rootCssClass": "btn",
      "cssVariableTemplate": "button-{$type}{$size}-{$part}-{$theme}-{$state}-{$property}",
      "scssVariableTemplate": "button-{$type}{$size}-{$part}-{$theme}-{$state}-{$property}",
      "replace": {
        "size": {
          "small": "sm",
          "medium": "md",
          "large": "lg"
        }
      }
    },
    "demo": {
      "tabs": {
        "overview": {
          "design": {
            "state": "default"
          },
          "layout": {}
        },
        "designTokens": {
          "design": {
            "state": "default"
          }
        }
      }
    }
  },
  "parts": [
    {
      "id": "$",
      "tokens": [
        {
          "from": "$",
          "export": [
            "BACKGROUND",
            "BORDER",
            "SPACING",
            "EFFECT"
          ]
        },
        {
          "from": "TEXT",
          "export": [
            "TYPOGRAPHY",
            "FILL"
          ]
        }
      ]
    }
  ]
}