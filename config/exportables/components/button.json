{
  "id": "button",
  "group": "Components",
  "options": {
    "exporter": {
      "search": "Button",
      "supportedVariantProps": {
        "design": [
          "Theme",
          "Type",
          "State(:disabled/Theme)"
        ],
        "layout": [
          "Size"
        ]
      }
    },
    "transformer": {
      "cssRootClass": "btn",
      "tokenNameSegments": [
        "${Component}",
        "${Type}",
        "${Size}",
        "${Part}",
        "${Theme}",
        "${State}",
        "${Property}"
      ]
    },
    "demo": {
      "tabs": {
        "overview": {
          "design": {
            "State": "default",
            "Theme": "${Theme}"
          },
          "layout": {}
        },
        "designTokens": {
          "design": {
            "State": {
              "default" : {
                "State": [
                  "default",
                  "hover",
                  "disabled"
                ],
                "Theme": "${Theme}"
              }
            },
            "Theme": "${Theme}"
          }
        }
      }
    }
  },
  "parts": [
    {
      "id": "$",
      "tokens": [
        {
          "from": "$",
          "export": [
            "BACKGROUND",
            "BORDER",
            "SPACING",
            "EFFECT"
          ]
        },
        {
          "from": "TEXT",
          "export": [
            "TYPOGRAPHY",
            "FILL"
          ]
        }
      ]
    }
  ]
}